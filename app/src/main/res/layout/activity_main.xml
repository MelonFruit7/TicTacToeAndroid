<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tvP1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="P1: 0"
            android:layout_weight="1"
            android:textColor="#88F"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P2: 0"
            android:textColor="#88F"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="#00EDD9"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="TIC-TAC-TOE"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:padding="10dp"
        android:text="Start"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/topLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTouch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnTouch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnTouch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTouch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnTouch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnTouch6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTouch7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnTouch8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnTouch9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="50sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />
    </LinearLayout>


</LinearLayout>